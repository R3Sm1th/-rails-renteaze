<div>
  <h1>Welcome Back, <%= current_user.first_name %></h1>
</div>
<div class="d-flex justify-content-center">
  <h2> Property Listings Dashboard </h2>
  <p> You have <%= @properties.count%> listings </p>
  <div>
    <%# <%= link_to "New property", new_property_path %>
    <a href="<%= new_property_path %>" class="btn btn-primary">
      New property
    </a>
  </div>

  <div>
   <a href="<%= root_path %>" class="btn btn-secondary">
      Homepage
    </a>
  </div>

  <div class="dashboard container d-flex justify-content-center my-5" >
    <div class="card-group">
      <% @properties.each do |property| %>
          <%= render property %>
          <% property_applications = property.property_applications %>
          <%# if theyre a tenant, ovveride the property_applications %>
          <%property_applications = property_applications.where(user: current_user) if current_user.tenant? %>
          <%# Loop through and display each application %>
          <%= property.property_applications.where(user: current_user).each do |pa| %>
            <%= render 'property_applications/property_application', property_application: pa %>
          <% end %>
        <% end %>
    </div>
  </div>

</div>
