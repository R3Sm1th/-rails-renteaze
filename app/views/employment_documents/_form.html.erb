<%# EMPLOYMENT FORM %>

<% model = @employment_document.id.present? ? @employment_document : [@property_application, @employment_document] %>
<%= simple_form_for model do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :company_name %>
    <%= f.input :date, order: [:day, :month, :year], discard_hour: true, discard_minute: true %>
    <%= f.input :status %>
    <%= f.input :pdf, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
