<% model = @identification.id.present? ? @identification : [@application, @identification] %>
<%= simple_form_for model do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :issue_date %>
    <%= f.input :expiration_date, order: [:day, :month, :year], discard_hour: true, discard_minute: true %>
    <%= f.input :pdf, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
