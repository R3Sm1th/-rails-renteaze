<%= turbo_frame_tag dom_id(id) do %>
  <div class="mb-3 frame">
    <div class="frame-content">
      <div class="text-content">
        <p><strong>Name of ID Document:</strong> <%= id.name %></p>
        <% if id.issue_date.present? %>
          <p><strong>Issued on :</strong> <%= id.issue_date.strftime("%d/%m/%Y") %></p>
        <% end %>
        <% if id.expiration_date.present? %>
          <p><strong>Expires on </strong> <%= id.expiration_date.strftime("%d/%m/%Y") %></p>
        <% end %>
        <%#= link_to "Delete", identification_path(id.property_application), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>

          <%= link_to "", edit_identification_path(id), class:"fa-solid fa-pen-to-square","data-bs-toggle": "tooltip", title: "Edit"%>
      </div>
      <div class="image-content">
        <%= cl_image_tag(id.pdf.key, :transformation=>[{:width=>350, :crop=>"scale"},
    {:fetch_format => :png}
    ])%>
      </div>
    </div>
  </div>
<% end %>
