<h1>Identifications</h1>
  <div>
    <div class="card-group">
      <% @id.each do |id| %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= id.name %></h5>
          <p class="card-text"><%= id.issue_date %></p>
          <p class="card-text"><small class="text-muted"><%= id.expiration_date %></small></p>
        </div>
        <%= cl_image_tag id.pdf.key, class:"card-img-bottom" %>
        <%= link_to "Amend ID", edit_property_application_identification_path(id.property_application, id.id), class:"card-link" %>
        <%#= link_to "Delete ID", property_path(id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
      <% end %>
    </div>
  </div>
</div>
