<div id="<%= dom_id property_application %>" class="card text-center mb-2">
  <div class="card-header">
    Applicant: <%= property_application.user.first_name %> <%= property_application.user.surname %>
  </div>
  <div class="card-body">
    <h5 class="card-title"> <% status = property_application.status.nil? ? "In Progress" : property_application.status %> <%= status %></h5>
     <div class="progress mb-2 mt-2">
      <div class="progress-bar" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
      <div class="progress-bar bg-success" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
      <div class="progress-bar bg-info" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <p class="card-text">Application commenced: <%= property_application.user.created_at %> </p>
    <p> Last activity: <%= property_application.user.updated_at %> </p>
    <%# <a href="#" class="btn btn-primary">Mark as Approved</a> %>
  </div>
  <div class="card-footer text-muted">
    <%#= link_to "Show this property application", application %>
  </div>
</div>
</div>
