<div>
  <div class="application-banner my-5">
    <h1> <%= @property.number%>, <%= @property.street %>, <%= @property.town %> </h1>
    <p> List of active property applications for this property.</p>
  </div>
  <div class="container">
    <div class="application-index-main col-10">
      <div>
        <%= link_to "Add a New Application",  new_property_property_application_path(@property), class: "btn btn-lg btn-primary btn-banner m-0 mb-5 centered-content", style: "width: 100%" %>
      </div>
      <div>
        <div class="card-group">
        <% @property_applications.each do |property_application| %>
          <%= render 'property_application', property_application: property_application  %>
          <%#= link_to "Show this property application", application %>
          <%#= link_to "Edit property application", property_application_path(application) %>
          <%#= link_to "Delete property application", property_application_path(application) %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
