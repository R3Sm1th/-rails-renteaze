<% model = @bank_reference.id.present? ? @bank_reference : [@application, @bank_reference] %>
<%= simple_form_for model do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%# <%= f.input :surname %>
    <%= f.input :issue_date, as: :string, input_html: { data: { controller: 'flatpickr' } }%>
    <%# <%= f.input :expiration_date %>
    <%= f.input :pdf, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
